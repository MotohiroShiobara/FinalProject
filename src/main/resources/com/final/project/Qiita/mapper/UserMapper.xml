<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.final.project.Qiita.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.final.project.Qiita.domain.User">
        <result property="accountName" column="account_name" />
        <result property="emailAddress" column="email_address" />
        <result property="password" column="password" />
        <result property="description" column="description" />
        <result property="id" column="id" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (account_name, email_address, password, description) VALUES (#{accountName}, #{emailAddress}, #{password}, #{description})
    </insert>

    <select id="select" resultType="com.final.project.Qiita.domain.User" resultMap="userResultMap">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="selectByUserName" resultType="com.final.project.Qiita.domain.User" resultMap="userResultMap">
        SELECT * FROM user WHERE account_name = #{accountName}
    </select>

    <select id="all" resultType="com.final.project.Qiita.domain.User" resultMap="userResultMap">
        SELECT * FROM user;
    </select>

    <delete id="delete">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE user SET account_name=#{accountName}, email_address=#{emailAddress}, password=#{password}, description=#{description} WHERE id=#{id}
    </update>

    <select id="findByEmail" resultType="com.final.project.Qiita.domain.User" resultMap="userResultMap">
        SELECT * FROM user WHERE email_address=#{emailAddress}
    </select>
</mapper>