<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.final.project.Qiita.mapper.UserMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (name, email, password, description) VALUES (#{name}, #{email}, #{password}, #{description})
    </insert>

    <select id="select" resultType="com.final.project.Qiita.domain.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="selectByUserName" resultType="com.final.project.Qiita.domain.User">
        SELECT * FROM user WHERE name = #{name}
    </select>

    <select id="all" resultType="com.final.project.Qiita.domain.User">
        SELECT * FROM user;
    </select>

    <delete id="delete">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <update id="update" useGeneratedKeys="true" keyProperty="id">
        UPDATE user SET name=#{name}, email=#{email}, password=#{password}, description=#{description} WHERE id=#{id}
    </update>

    <select id="findByEmail" resultType="com.final.project.Qiita.domain.User">
        SELECT * FROM user WHERE email=#{email}
    </select>
</mapper>