<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.final.project.Teechear.mapper.ArticleMapper">
    <resultMap id="articleResultMap" type="com.final.project.Teechear.domain.Article">
        <result property="title" column="title" />
        <result property="userId" column="user_id" />
        <result property="releasedAt" column="released_at" typeHandler="org.apache.ibatis.type.LocalDateTimeTypeHandler" />
        <result property="markdownText" column="markdown_text" />
        <result property="id" column="id" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article (user_id, title, markdown_text, released_at) VALUES (#{userId}, #{title}, #{markdownText}, #{releasedAt})
    </insert>

    <select id="find" resultType="com.final.project.Teechear.domain.Article">
        SELECT * FROM article WHERE id = #{id} LIMIT 1
    </select>
</mapper>